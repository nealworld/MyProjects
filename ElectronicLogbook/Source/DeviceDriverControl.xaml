<UserControl x:Class="ElectronicLogbook.DeviceDriverControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <DockPanel>
        <ListView ItemsSource="{Binding}">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Device Name" DisplayMemberBinding="{Binding mDeviceName}" Width="100" />
                    <GridViewColumn Header="Driver Name"  DisplayMemberBinding="{Binding mDriverName}" Width="100" />
                    <GridViewColumn Header="Driver Version Number"  DisplayMemberBinding="{Binding mDriverVersionNumber}" Width="150" />
                    <GridViewColumn Header="Driver Location"  DisplayMemberBinding="{Binding mDriverLocation}" Width="150" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
