        <TreeView Name="AircraftEquipmentConfigTreeView" ItemsSource="{Binding mAirCraftEquipmentConfigViewModelList}" Padding="5,1,10,1" >
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
            
            <TreeView.ItemTemplate>

                <HierarchicalDataTemplate ItemsSource="{Binding Path=mSubEquipmentViewModelList}">

                    <TextBlock Text="{Binding Path=mNodeName}"  />

                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>

        </TreeView>

        <StackPanel Background="White" DataContext="{Binding ElementName=AircraftEquipmentConfigTreeView}">
            <Expander Header="HW Part" >
                
                <ListView>
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="HW Part Index" Width="100" />
                            <GridViewColumn Header="HW Part Number" Width="100" />
                            <GridViewColumn Header="HW Part Description"  Width="150" />
                            <GridViewColumn Header="HW Part Status"  Width="250" />
                            <GridViewColumn Header="HW Part Serial Number"  Width="250" />
                        </GridView>
                    </ListView.View>
                </ListView>
